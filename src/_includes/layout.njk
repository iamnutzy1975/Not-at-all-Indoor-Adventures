:root {
  --primary: #2d5a27; /* Deep Forest Green */
  --primary-hover: #1e3d1a;
  --accent: #d4af37; /* Trophy Gold (for buttons/highlights) */
  --bg-dark: #1a1c1e; /* Deep Water Slate */
  --text-light: #f8f9fa;
}

body {
  background-color: var(--bg-dark);
  color: var(--text-light);
  line-height: 1.6;
}

/* Make headers pop with a metallic "Steelhead" feel */
h1, h2, h3 {
  color: #e0e0e0;
  text-transform: uppercase;
  letter-spacing: 1px;
  border-bottom: 2px solid var(--primary);
  padding-bottom: 0.5rem;
}

/* Button sex appeal */
[role="button"], button {
  background-color: var(--primary);
  border: none;
  transition: all 0.3s ease;
}

[role="button"]:hover {
  background-color: var(--accent);
  color: #000;
  transform: translateY(-2px);
}
.video-container {
    box-shadow: 0 10px 30px rgba(0,0,0,0.5);
    border: 1px solid #333;
}

/* Hero Header Styling */
.hero-banner {
    width: 100%;
    height: 70vh;
    background: linear-gradient(rgba(0,0,0,0.2), rgba(26,28,30,1)), url('/assets/hero-trout.webp');
    background-size: cover;
    background-position: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    margin-top: -100px; /* Pulls image up behind the nav if nav is transparent */
    padding-top: 100px;
}

.hero-banner h1 {
    font-size: 3.5rem;
    color: var(--accent);
    text-shadow: 2px 2px 15px rgba(0,0,0,0.9);
    margin-bottom: 0;
    border: none;
}

